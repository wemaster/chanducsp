@{
    Layout = null;
}
@model Nhatngu.Models.TblAcc
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/Assets/Components/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/Assets/Components/font-awesome/css/font-awesome.min.css" />
    <link href="~/Assets/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="/Assets/Components/Ionicons/css/ionicons.min.css">
    <link href="~/Assets/iCheck/square/red.css" rel="stylesheet" />
    <!-- Theme style -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/"><b>ChdGame </b> - Chân Đức</a>
        </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Đăng nhập để tham gia thảo luận</p>
                @using(Html.BeginForm("Index","Login",FormMethod.Post))
                {
                    @Html.ValidationMessage("error", new { @class="text-danger"})
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(x => x.NameAcc, new { @class = "form-control", @placeholder="Tên đăng nhập",@autofocus="auto" })
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(x => x.PassAcc, new { @class="form-control", @placeholder="Nhập mật khẩu",@type="password" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row center-block">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> Nhớ đăng nhập
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
      
                        <!-- /.col -->
                    </div>
                }
                <div class="social-auth-links text-center">
                    <p>- Hoặc -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook"></i> Đăng nhập bằng
                        Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                        <i class="fa fa-google-plus"></i> Đăng nhập bằng
                        Google+
                    </a>
                </div>
                <!-- /.social-auth-links -->
                <a href="#">Quân mật khẩu</a><br>
                <a href="register.html" class="text-center">Đăng ký</a>
            </div>
            <!-- /.login-box-body -->
</div>
    <!-- /.login-box -->
    <!-- Bootstrap 3.3.7 -->
    <script src="/Assets/Components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Assets/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-red',
                radioClass: 'iradio_square-red',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
